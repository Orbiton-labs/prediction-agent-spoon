{
  "llm": {
    "default_provider": "openai",
    "default_model": "gpt-4o",
    "temperature": 0.7,
    "max_tokens": 4096,
    "timeout": 120
  },
  "agent": {
    "type": "react-mcp",
    "memory_enabled": true,
    "max_iterations": 10,
    "tools": [
      "search",
      "calculator",
      "file_operations"
    ]
  },
  "ui": {
    "theme": "default",
    "show_thinking": true,
    "auto_expand_threshold": 5,
    "syntax_highlighting": true,
    "show_timestamps": false,
    "show_token_usage": true
  },
  "session": {
    "save_history": true,
    "history_dir": "~/.orbiton/history",
    "auto_save_interval": 60
  },
  "mcp": {
    "enabled": true,
    "servers": [
      {
        "name": "gemini-cli",
        "config": {
          "command": "npx",
          "args": ["-y", "gemini-mcp-tool"]
         }
      }
    ]
  }
}
