# Orbiton Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# ======= LLM API Keys (at least one required) =======
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# DeepSeek API Key
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# ======= Custom API Base URL (Optional) =======
# If you're using a custom OpenAI-compatible endpoint, set this
# Examples:
#   - OpenAI-compatible providers (groq, together.ai, etc.)
#   - Local LLM servers (ollama, vllm, text-generation-webui, etc.)
#   - Proxy servers
BASE_URL=https://your-custom-endpoint.com/v1

# ======= Model Configuration (Optional) =======
# Override the default model and provider
ORBITON_LLM_MODEL=gpt-4o
ORBITON_LLM_PROVIDER=openai
ORBITON_LLM_TEMPERATURE=0.7
ORBITON_LLM_MAX_TOKENS=4096

# ======= UI Settings (Optional) =======
ORBITON_UI_SHOW_THINKING=true
ORBITON_UI_THEME=default

# ======= Session Settings (Optional) =======
ORBITON_SESSION_SAVE_HISTORY=true
ORBITON_SESSION_HISTORY_DIR=~/.orbiton/history
