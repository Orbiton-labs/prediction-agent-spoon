# ===== REQUIRED: API Configuration =====
# Your API key (required)
OPENAI_API_KEY=sk-your-actual-api-key-here

# Custom endpoint URL (optional, for custom OpenAI-compatible endpoints)
BASE_URL=https://your-custom-endpoint.com/v1

# ===== OPTIONAL: Model Configuration =====
# Override the default model (from config/defaults.json)
ORBITON_LLM_MODEL=gpt-4o
ORBITON_LLM_PROVIDER=openai
ORBITON_LLM_TEMPERATURE=0.7
ORBITON_LLM_MAX_TOKENS=4096

# ===== OPTIONAL: UI Settings =====
ORBITON_UI_SHOW_THINKING=true
ORBITON_UI_THEME=default

# ===== OPTIONAL: Session Settings =====
ORBITON_SESSION_SAVE_HISTORY=true
ORBITON_SESSION_HISTORY_DIR=~/.orbiton/history

